# Telegram Bot Token (required)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Allowed user IDs (comma-separated, required)
ALLOWED_USERS=123456789,987654321

# Tmux session name (optional, defaults to "oobot")
TMUX_SESSION_NAME=oobot

# OpenCode command to run in new windows (optional, defaults to "opencode")
OPENCODE_COMMAND=opencode

# Monitor polling interval in seconds (optional, defaults to 2.0)
MONITOR_POLL_INTERVAL=2.0

# Runtime state directory (optional, defaults to "./.oobot")
OOBOT_DIR=.oobot

# OpenCode storage path (optional, defaults to "~/.local/share/opencode/storage")
OPENCODE_STORAGE_PATH=~/.local/share/opencode/storage

# Legacy OpenCode projects path (optional, defaults to "~/.opencode/projects")
OPENCODE_PROJECTS_PATH=~/.opencode/projects
